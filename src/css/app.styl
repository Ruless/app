// app global css


html {
    height: 100%;
}
    
.body {
    padding 0 20px
    height 100%
    background-image: url('../assets/background.png');
    background-repeat: no-repeat;
    background-size: cover;
    background-position: 80%
}
.logo {
    display: block;
    margin: 0 auto;
    padding-top: 55px;
    width: 180px;
    position absolute
    top: 55px;
    left: calc(50% - 90px)
}
.button_group {
    // margin-top: 40%
    text-align: center
    &__button {
        margin-bottom: 40px;
        width: 100%;
        box-shadow: 0px 1px 0px #41375B;
        border-radius: 5px;
    }
    &__login {
        margin-bottom: 20px;
        width: 100%;
        box-shadow: 0px 1px 0px #41375B;
        border-radius: 5px;
        &:last-child {
            margin-bottom: 100px
          }
    }
} 

.form-authorization {
  &__header {
    margin-bottom: 25px
    font-family: Roboto;
    font-style: normal;
    font-weight: bold;
    line-height: normal;
    font-size: 20px;
    text-align: center;
    color: #FFFFFF;
    text-shadow: 0px -1px 0px rgba(0, 0, 0, 0.5);
  }
  &__input {
    background: #272B3C !important;
    border: 1px solid #313D4F;
    box-sizing: border-box;
    border-radius: 3px;
    padding-left: 15px;
    color: #6D6D74
    font-size: 12px;

    &:not(:last-child) {
        margin-bottom: 10px;
    }
    &--once {
        margin-bottom: 20px
      }
    .q-icon {
      font-size: 18px
      line-height: 24px;
      margin-right: 10px
      color: #9094A3
    }
  }
}

.forgot_button {
  font-family: Roboto;
  font-style: normal;
  font-weight: normal;
  line-height: normal;
  font-size: 11px;
  float: right;
  color: #FFFFFF;
  margin-bottom: 15px;
  margin-top: 15px;
  border-bottom: 1px solid rgba(255, 255, 255, 0.148975);
}
.question {
  // margin-top: 20px;
  font-family: Roboto;
  font-style: normal;
  font-weight: normal;
  line-height: normal;
  font-size: 12px;
  text-align: center;
  color: #6D6D74;
  padding-bottom: 30px;
  & .forgot_button {
    float none
  }
}

.q-layout-page-login {
  display flex
  flex-direction: column
  justify-content: flex-end
}